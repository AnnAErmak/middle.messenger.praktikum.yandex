<div class="wrapper-chat">
    <div class="sear-form">
        <div class="content-sear">
            <input class="sear-input" type="text">
            <button class="sear-btn">OK</button>
            <button class="btn-cancel">Отменить</button>
            <div class="sear-res"></div>
        </div>
    </div>
    <div class = 'add-chat-modal'>
        <div class="wrapper-madal">
            <div class="content-modal">
                <input class= 'title-chat' type="text" placeholder="Название чата">
                <button class="add-chat">OK</button>
                <button class="btn-cancel">Отменить</button>
            </div>
        </div>
    </div>
    <div class="chat-list">
        <div class="chat-list__settings">
            <img class="chat-list__img-add" src="./img/add.png" alt="добавить чат">
            {{{addChatBtn}}}
            {{{removeChatBtn}}}
            <a href="./profile.html"> Профиль   ></a>
        </div>
        <div class="search-form">
            <input type="text" class="search-form__txt" placeholder="Поиск">
            <button class="search-form__btn">
                <img src="./img/search_chat.svg" alt="поиск" class="search-form__image">
            </button>
        </div>
        <div class="chat-list__wrapper">
            <ul class="chat-list__users">
            {{#each chatList}}
                {{{this}}}
            {{/each}}
<!--                <li class="chat-list__user">-->
<!--                    <div class="chat-list__img-user">-->
