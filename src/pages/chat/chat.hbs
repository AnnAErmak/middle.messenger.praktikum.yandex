            <div class="chat-messages__wrapper-form">
                <form action="#" method="post" class="chat-messages__form form-chat">
                    <input class ="form-chat__img-menu" name="img-menu" type="image" src="./img/paperclip_chat.png">
                    <input class ="form-chat__mess" name="message" type="text" placeholder="сообщение">
                    <div data-name = 'message' class="error-message">
                        не должно быть пустым
                    </div>
                    <input class ="form-chat__sub" name="sub" type="submit" value="Отправить">
                </form>
            </div>
        </div>
    </div>
</div>
