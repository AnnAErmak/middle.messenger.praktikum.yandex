<main class="container">
    <div class="wrapper-form">
        <form class="form-profile" method="get" action="#">
            <fieldset class="form-profile__foto">
                <img src="./img/profile_foto.png" alt="фотография профиля">
                <h2 class="form-profile__caption">Иван</h2>
            </fieldset>
            <fieldset class="form-profile__inputs">
                {{> inputMail }}
                {{> inputLogin }}
                {{> inputFirstName }}
                {{> inputSecondName }}
                {{> inputDisplayName }}
                {{> inputPhone }}
            </fieldset>
            <fieldset class="form-profile__buttons">
                {{> buttonFixData }}
                {{> buttonFixPassword }}
                <a class="form-profile__link" href="./login.html">Выйти</a>
            </fieldset>
        </form>
    </div>
</main>